{
  "include": ["types", "src", "@types", "declaration.d.ts"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "typeRoots": [
    "../node_modules/@types",
    "../@types"
  ],
}